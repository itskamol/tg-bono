// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegram_id Int      @unique
  full_name   String
  role        Role
  branch      Branch?  @relation(fields: [branch_id], references: [id])
  branch_id   String?  @db.ObjectId
  orders      Order[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Branch {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String   @unique
  address    String
  users      User[]
  orders     Order[]
  created_at DateTime @default(now())
}

model Category {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String   @unique // "Pizza", "Burger", etc.
  emoji      String   // "üçï", "üçî", etc.
  created_at DateTime @default(now())
}

model Side {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String   @unique // "oldi", "orqa", "orqa + oldi", etc.
  price      Float    // Har bir tomonning narxi
  created_at DateTime @default(now())
}

model Order {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  order_number    String          @unique
  client_name     String
  client_phone    String?
  client_birthday DateTime?
  branch          Branch          @relation(fields: [branch_id], references: [id])
  branch_id       String          @db.ObjectId
  cashier         User            @relation(fields: [cashier_id], references: [id])
  cashier_id      String          @db.ObjectId
  total_amount    Float
  order_products  Order_Product[]
  payments        Payment[]
  created_at      DateTime        @default(now())
}

model Order_Product {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  order        Order  @relation(fields: [order_id], references: [id])
  order_id     String @db.ObjectId
  product_name String // Mahsulot nomi (display uchun)
  category     String // Kategoriya nomi
  side_name    String // Tanlangan tomon nomi
  quantity     Int
  price        Float  // Har bir mahsulotning narxi (side price)
}

model Payment {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  order        Order       @relation(fields: [order_id], references: [id])
  order_id     String      @db.ObjectId
  payment_type PaymentType
  amount       Float
  created_at   DateTime    @default(now())
}

model Setting {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique
  value String
}

enum Role {
  SUPER_ADMIN
  ADMIN
  CASHIER
}

enum PaymentType {
  CASH
  CARD
  TRANSFER
}
